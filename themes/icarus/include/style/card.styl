/* ---------------------------------
 *              Card
 * --------------------------------- */
.card
    overflow: visible
    border-radius: $card-radius

    & + .card, & + .column-right-shadow
        margin-top: 1.5rem

    .card-image
        overflow: hidden
        border-top-left-radius: $card-radius
        border-top-right-radius: $card-radius

    .thumbnail
        float: right;
        width: 135px;
        height: 76px;
        margin: 0 0 5px 5px;


    .media + .media
        border: none
        margin-top: 0
